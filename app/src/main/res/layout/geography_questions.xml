            android:id="@+id/geo8"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="10dp"
            style="@style/CardViewStyle">
            <LinearLayout style="@style/CardLinearStyle">
                <TextView
                    android:text="@string/GT8"
                    style="@style/TextViewCardStyle"/>
                <ImageView
                    android:src="@drawable/eu"
                    style="@style/ImageCardStyle" />

                <CheckBox
                    android:id="@+id/gch1"
                    android:text="@string/GT8a"
                    style="@style/checkBoxStyle"/>
                <CheckBox
                    android:id="@+id/gch2"
                    android:text="@string/GT8b"
                    style="@style/checkBoxStyle" />
                <CheckBox
                    android:id="@+id/gch3"
                    android:text="@string/GT8c"
                    style="@style/checkBoxStyle"/>
                <CheckBox
                    android:id="@+id/gch4"
                    style="@style/checkBoxStyle"
                    android:text="@string/GT8d" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id = "@+id/submit"
            android:text ="@string/submit"
            android:onClick = "submit"
            style="@style/questButton" />

        <Button
            android:id = "@+id/continueAc"
            android:text ="@string/continAc"
            android:onClick = "continueAc"
            style="@style/questButton"/>

    </LinearLayout>

</ScrollView>