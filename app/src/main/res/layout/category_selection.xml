<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#f4d802">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id = "@+id/welcomeMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop = "16dp"
            android:paddingBottom = "16dp"
            android:gravity = "center"
            android:text="@string/chooseCategory"/>

        <View
            android:layout_marginBottom = "16dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginRight = "16dp"
            android:layout_marginLeft = "16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <Button
                android:id = "@+id/geography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text =  "@string/geo"
                android:layout_margin="8dp"
                android:onClick = "selected"
                android:paddingRight = "60dp"
                android:paddingLeft = "60dp"
                android:drawableRight="@drawable/geography"
                android:drawableLeft="@drawable/geography"
                android:background="@drawable/round_shape_button" />
            <Button
                android:id = "@+id/history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text =  "@string/hist"
                android:paddingRight = "60dp"
                android:paddingLeft = "60dp"
                android:layout_margin="8dp"
                android:onClick = "selected"
                android:drawableRight="@drawable/prueba"
                android:drawableLeft="@drawable/prueba"
                android:background="@drawable/round_history" />
            <Button
                android:id = "@+id/sports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text =  "@string/sports"
                android:paddingRight = "60dp"
                android:paddingLeft = "60dp"
                android:drawableRight="@drawable/sports"
                android:drawableLeft="@drawable/sports"
                android:layout_margin="8dp"
                android:onClick = "selected"
                android:background="@drawable/music"/>
            <Button
                android:id = "@+id/videogames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text =  "@string/vgames"
                android:paddingRight = "60dp"
                android:paddingLeft = "60dp"
                android:drawableRight="@drawable/gamesicon"
                android:drawableLeft="@drawable/gamesicon"
                android:layout_margin="8dp"
                android:onClick = "selected"
                android:background="@drawable/round_videogames"/>
            <Button
                android:id = "@+id/entertainment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text =  "@string/entr"
                android:paddingRight = "60dp"
                android:paddingLeft = "60dp"
                android:drawableRight="@drawable/cultureicon"
                android:drawableLeft="@drawable/cultureicon"
                android:layout_margin="8dp"
                android:onClick = "selected"
                android:background="@drawable/round_language"/>
            <Button
                android:id = "@+id/science"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text =  "@string/science"
                android:paddingRight = "60dp"
                android:paddingLeft = "60dp"
                android:drawableRight="@drawable/atomic"
                android:drawableLeft="@drawable/atomic"
                android:layout_margin="8dp"
                android:onClick = "selected"
                android:background="@drawable/science"/>

            <Button
                android:id = "@+id/random"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text =  "@string/random"
                android:paddingRight = "60dp"
                android:paddingLeft = "60dp"
                android:drawableRight="@drawable/randomicon"
                android:drawableLeft="@drawable/randomicon"
                android:layout_margin="8dp"
                android:onClick = "selected"
                android:background="@drawable/random"/>

        </LinearLayout>

        <View
            android:layout_marginTop = "16dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginRight = "16dp"
            android:layout_marginLeft = "16dp"/>

    </LinearLayout>
</ScrollView>