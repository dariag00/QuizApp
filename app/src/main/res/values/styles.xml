<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GeoButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/geography</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>
    <style name="HistButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/history</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>
    <style name="SportsButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/music</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>
    <style name="EntrButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/films</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>
    <style name="VGamesButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/videogames</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>
    <style name="SciButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/science</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="RadioButtonMainActivity">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/RBMActTextSize</item>
    </style>

    <style name="GeneralButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/GenButtonMargin</item>
        <item name="android:textSize">@dimen/GenButtonTextSize</item>
        <item name="android:padding">@dimen/GenButtonPadding</item>
    </style>

    <style name="MainImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/MainImageViewpadTop</item>
        <item name="android:paddingBottom">@dimen/MainImageViewpadBot</item>
    </style>

    <style name="QuestionsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/questionsTextSize</item>
        <item name="android:paddingRight">@dimen/questionsVpad</item>
        <item name="android:paddingBottom">@dimen/questionsVpad</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:paddingLeft">@dimen/EditTextVpad</item>
        <item name="android:paddingRight">@dimen/EditTextVpad</item>
        <item name="android:paddingBottom">@dimen/EditTextVpad</item>
        <item name="android:textSize">@dimen/EditTextSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/AppNameTextSize</item>
        <item name="android:paddingBottom">@dimen/AppNamepadding</item>
    </style>

    <style name="RadioGroupMainActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">@dimen/RGrouppRight</item>
        <item name="android:layout_marginLeft">@dimen/RGroupLayoutLeft</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/CardViewL</item>
        <item name="android:layout_marginBottom">@dimen/CardViewL</item>
        <item name="android:layout_margin">@dimen/CardViewL</item>
    </style>

    <style name="CatNameCardStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/CardViewL</item>
        <item name="android:layout_margin">@dimen/CardViewL</item>
    </style>

    <style name="CardLinearStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RadioGroupQStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/RGroupQpL</item>
        <item name="android:paddingBottom">@dimen/RGroupQpB</item>
    </style>

    <style name="RButtonQStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">@dimen/RbuttonQTextSize</item>
    </style>

    <style name="TextViewCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/QuestTitleSize</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/TextViewCardMarginBot</item>
        <item name="android:layout_marginLeft">@dimen/TextViewCardMargin</item>
        <item name="android:layout_marginRight">@dimen/TextViewCardMargin</item>
        <item name="android:layout_marginBottom">@dimen/TextViewCardMarginBot</item>
    </style>

    <style name="ImageCardStyle">
        <item name="android:layout_width">@dimen/ImageViewCardWidth</item>
        <item name="android:layout_height">@dimen/ImageViewCardHeight</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">"Image to be shown in the card"</item>
        <item name="android:layout_marginBottom">@dimen/ImageViewCardB</item>
    </style>

    <style name="questButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/QuestButtonTextSize</item>
        <item name="android:layout_margin">@dimen/QuestionButtonL</item>
        <item name="android:background">@drawable/submit</item>
    </style>

    <style name="checkBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/CheckBoxTextSize</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_marginLeft">@dimen/CheckBoxLL</item>
        <item name="android:layout_marginBottom">@dimen/CheckBoxLB</item>
    </style>

    <style name="CategoryTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/CSTextPadding</item>
        <item name="android:paddingBottom">@dimen/CSTextPadding</item>
        <item name="android:textSize">@dimen/CSTextSize</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LinearCategory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/LinearMarginCS</item>
        <item name="android:layout_marginLeft">@dimen/LinearMarginCS</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ViewLineCategory">
        <item name="android:layout_marginBottom">@dimen/FVCSmargin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Vheight</item>
        <item name="android:background">#000000</item>
        <item name="android:layout_marginRight">@dimen/FVCSmargin</item>
        <item name="android:layout_marginLeft">@dimen/FVCSmargin</item>
    </style>

    <style name="ButtonCategoryS">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/ButtonCSelectionmargin</item>
        <item name="android:paddingRight">@dimen/ButtonCSelectionpadding</item>
        <item name="android:paddingLeft">@dimen/ButtonCSelectionpadding</item>
        <item name="android:paddingTop">@dimen/ButtonCSelectionpaddingTop</item>
        <item name="android:paddingBottom">@dimen/ButtonCSelectionpaddingTop</item>
        <item name="android:textSize">@dimen/ButtonCSelectionTextSize</item>
    </style>

    <style name="FinalViewCategoryS">
        <item name="android:layout_marginTop">@dimen/FVCSmargin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Vheight</item>
        <item name="android:background">#000000</item>
        <item name="android:layout_marginRight">@dimen/FVCSmargin</item>
        <item name="android:layout_marginLeft">@dimen/FVCSmargin</item>
    </style>

    <style name="QuestionsMainTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:paddingTop">@dimen/TextQVpadding</item>
        <item name="android:paddingBottom">@dimen/TextQVpadding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/TextQView</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ViewLeftQ">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/ViewHeightQ</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/ViewMarginQ</item>
        <item name="android:background">#808182</item>
    </style>

    <style name="ViewR">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/ViewHeightQ</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">@dimen/ViewMarginQ</item>
        <item name="android:background">#808182</item>
    </style>

    <!--FinalView Styles-->

    <style name="FVTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/FVTextViewpadding</item>
        <item name="android:paddingBottom">@dimen/FVTextViewpadding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/FVTextViewTextSize</item>
    </style>

    <style name="FVViewTop">
        <item name="android:layout_marginBottom">@dimen/FVViewmargin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/FVViewheight</item>
        <item name="android:background">#000000</item>
        <item name="android:layout_marginRight">@dimen/FVViewmargin</item>
        <item name="android:layout_marginLeft">@dimen/FVViewmargin</item>

    </style>

    <style name="FVViewBot">
        <item name="android:layout_marginTop">@dimen/FVViewmargin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/FVViewheight</item>
        <item name="android:background">#000000</item>
        <item name="android:layout_marginRight">@dimen/FVViewmargin</item>
        <item name="android:layout_marginLeft">@dimen/FVViewmargin</item>
    </style>

    <style name="FVLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/FVLinear</item>
        <item name="android:layout_marginLeft">@dimen/FVLinear</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FVButton">
        <item name="android:layout_width">@dimen/FVButtonWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/FVButtonMarg</item>
        <item name="android:layout_marginBottom">@dimen/FVButtonMarg</item>
        <item name="android:layout_marginLeft">@dimen/FVButtonMarg</item>
        <item name="android:paddingLeft">@dimen/FVButtonPLeft</item>
        <item name="android:paddingRight">@dimen/FVButtonPadd</item>
        <item name="android:paddingTop">@dimen/FVButtonPadd</item>
        <item name="android:paddingBottom">@dimen/FVButtonPadd</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/FVButtonRight</item>
    </style>

    <style name="ButtRatLinearStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RatingBar">
        <item name="android:layout_marginRight">@dimen/RatingMargin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0</item>
        <item name="android:paddingTop">@dimen/RatingMarginP</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="TwitterButton" parent="FVButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/FVButtonMarg</item>
        <item name="android:layout_marginBottom">@dimen/FVButtonMarg</item>
        <item name="android:layout_marginLeft">@dimen/FVButtonMarg</item>
        <item name="android:drawableLeft">@drawable/twitter</item>
        <item name="android:paddingLeft">@dimen/TwitterPadding</item>
        <item name="android:background">@drawable/round_history</item>

    </style>

    <style name="RestartButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/FVButtonMarg</item>
        <item name="android:layout_marginBottom">@dimen/FVButtonMarg</item>
        <item name="android:layout_marginLeft">@dimen/FVButtonMarg</item>
        <item name="android:padding">@dimen/RestartPad</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/FVButtonRight</item>
        <item name="android:background">@drawable/random</item>
        <item name="android:textSize">@dimen/FVButtonTSize</item>
    </style>

    <style name="SignInOutBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="SignInButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SignInOutBarBlurb">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="SubButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RadioGroupHorizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="HorizontalScrollView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="SubmitMessTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
