<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GeoButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/geography</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>
    <style name="HistButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/history</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>
    <style name="SportsButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/music</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>
    <style name="EntrButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/films</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>
    <style name="VGamesButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/videogames</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>
    <style name="SciButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/science</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="RadioButtonMainActivity">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="GeneralButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MainImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="QuestionsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="RadioGroupMainActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_marginLeft">50dp</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="CatNameCardStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="CardLinearStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RadioGroupQStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="RButtonQStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="TextViewCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="ImageCardStyle">
        <item name="android:layout_width">345dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center</item>
        <item name="android:contentDescription">"Image to be shown in the card"</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="questButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/submit</item>
    </style>

    <style name="checkBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>
